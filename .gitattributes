# Auto-detect text files and normalize line endings
* text=auto

# Explicitly set LF endings for code and config files
*.ts     text eol=lf
*.tsx    text eol=lf
*.js     text eol=lf
*.jsx    text eol=lf
*.json   text eol=lf
*.scss   text eol=lf
*.css    text eol=lf
*.html   text eol=lf
*.md     text eol=lf
*.yml    text eol=lf
*.yaml   text eol=lf
*.sh     text eol=lf
*.cjs    text eol=lf
*.mjs    text eol=lf

# Treat binary files as-is
*.png    binary
*.jpg    binary
*.jpeg   binary
*.gif    binary
*.ico    binary
*.svg    binary
*.woff   binary
*.woff2  binary
*.ttf    binary
*.eot    binary
*.mp4    binary
*.mp3    binary
